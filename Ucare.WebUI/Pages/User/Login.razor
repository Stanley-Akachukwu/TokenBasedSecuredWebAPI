@page "/login"
 @inherits LoginBase
@using  Ucare.WebUI.Shared.Components




<div class="login">
  <div class="card-header">
    <div class="header">Sign In</div>
  </div>
  <div class="card-body">
    <EditForm Model="@loginViewModel" OnValidSubmit="HandleLoginSubmit">
    <div class="row">
        <div class="col-md-2">
            
        </div>
        <div class="col-md-8">
            <div class="bg-black">

                <div class="form-box" id="login-box">
                  
                     @if (isBusy == true)
                            {
                            <div class="spinner"></div>
                            }
                    <div>
                          <AlertMessage Message="@message" MessageType="@messageType" />
                        <div class="body bg-gray">
                            <div class="form-group">
                                <InputText id="email" type="email" class="form-control" placeholder="Email address"
                                           @bind-Value="loginViewModel.Email" />
                                <ValidationMessage For="@(() => loginViewModel.Email)" />
                            </div>
                            <div class="form-group">
                                <InputText id="password" type="password" class="form-control" placeholder="Password"
                                           @bind-Value="loginViewModel.Password" />
                                <ValidationMessage For="@(() => loginViewModel.Password)" />
                            </div>
                        </div>
                        <div class="footer">
                           
                            <button type="submit" class="btn bg-olive btn-success">Login</button>
                            <a href="/register" class="btn sm-olive btn-link">Create New Account</a>
                        </div>
                    </div>
                    <div class="margin text-center">
                        User 1:
email: nedum@yahoo.com 
password:Nedum@y12345

User 2:
email: emezu@gmail.com 
password:mezu@G12345

                        </div>
                    <div class="margin text-center">
                        <span>Sign in using social networks</span>
                        <br />
                        <button class="btn bg-light-blue btn-circle"><i class="fa fa-facebook">facebook</i></button>
                        <button class="btn bg-aqua btn-circle"><i class="fa fa-twitter">twitter</i></button>
                        <button class="btn bg-red btn-circle"><i class="fa fa-google-plus">google</i></button>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2">

        </div>
    </div>
</EditForm>
  </div>
</div>





